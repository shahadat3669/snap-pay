<div class="nav bg--primary d-flex justify-content-between align-items-center p-2  fixed-top">
  <%= button_to categories_path, method: :get, class: 'bg-transparent text-white m-0 border-0 text-decoration-none' do %>
    <i class="bi bi-arrow-left"></i>
  <% end %>
  <h5 class='text-white m-0 py-2 text-uppercase font-weight-bold'>New Category</h5>
  <%= button_to  root_path, method: :get, class: 'bg-transparent text-white m-0 border-0 text-decoration-none' do %>
    <i class="bi bi-house-door-fill"></i>
  <% end %>
</div>
<%= form_with(model: @category,  html: { class: "mt-6 mx-2 d-flex flex-column gap-1" }) do |form| %>
  <div class="p-2 bg-white">
    <%= form.file_field :icon, class: 'form-control file-input rounded-0 border-0' , id: 'icon-input' %>
  </div>
  <div class="p-2 bg-white">
    <%= form.text_field :name, class: 'form-control rounded-0 border-0', placeholder: "#{:name}".capitalize %>
    <% if @category.errors.has_key?(:name) %>
      <p class="text-danger"><%= @category.errors[:name].join(', ') %></p>
    <% end %>
  </div>
  <% if @category.errors.any? %>
    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="custom-btn__wrapper custom-btn__wrapper--secondary fixed-bottom">
    <%= form.submit class:"custom-btn custom-btn--secondary" %>
  </div>
<% end %>
